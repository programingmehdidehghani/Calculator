<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:text="@string/_0"
        android:ems="10"
        android:textSize="50sp"
        android:gravity="right|bottom"
        android:layout_weight="0.5"
        android:padding="15dp"
        android:background="@color/gray"
        android:layout_height="0dp"
        android:layout_marginBottom="1pt"
        tools:ignore="LabelFor,RtlHardcoded"
        android:autofillHints="" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginTop="2pt"
            android:layout_marginBottom="2pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btn_ac"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="acEvent"
                android:text="@string/ac"
                android:layout_marginRight="2pt"
                android:textSize="18sp"
                android:background="@color/blue">
            </Button>

            <Button
                android:id="@+id/btn_plus_mines"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="@string/plus"
                android:layout_marginRight="2pt"
                android:textSize="18sp"
                android:background="@color/blue">
            </Button>

            <Button
                android:id="@+id/btn_divider"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="operatorEvent"
                android:text="/"
                android:textSize="18sp"
                android:background="@color/blue"
                android:layout_marginEnd="2pt">
            </Button>

            <Button
                android:id="@+id/btn_multiolay"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="*"
                android:textSize="18sp"
                android:background="@color/colorAccent">
            </Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btn7"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:onClick="numberEvent"
                android:layout_height="30pt"
                android:text="7"
                android:layout_marginRight="2pt"
                android:textSize="18sp"
                android:background="@color/blue">
            </Button>

            <Button
                android:id="@+id/btn8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="8"
                android:layout_marginRight="2pt"
                android:textSize="18sp"
                android:background="@color/blue">
            </Button>

            <Button
                android:id="@+id/btn9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:text="9"
                android:textSize="18sp"
                android:background="@color/blue"
                android:layout_marginEnd="2pt">
            </Button>

            <Button
                android:id="@+id/btn_percent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="percentEvent"
                android:text="%"
                android:textSize="18sp"
                android:background="@color/colorAccent">
            </Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btn4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="4"
                android:layout_marginRight="2pt"
                android:textSize="18sp"
                android:background="@color/blue">
            </Button>

            <Button
                android:id="@+id/btn5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="5"
                android:layout_marginRight="2pt"
                android:textSize="18sp"
                android:background="@color/blue">
            </Button>

            <Button
                android:id="@+id/btn6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:text="6"
                android:textSize="18sp"
                android:background="@color/blue"
                android:layout_marginEnd="2pt">
            </Button>

            <Button
                android:id="@+id/btn_plus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:text="+"
                android:textSize="18sp"
                android:background="@color/colorAccent">
            </Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btn1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="1"
                android:layout_marginRight="2pt"
                android:onClick="numberEvent"
                android:textSize="18sp"
                android:background="@color/blue"
                tools:ignore="OnClick">
            </Button>

            <Button
                android:id="@+id/btn2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="2"
                android:layout_marginRight="2pt"
                android:textSize="18sp"
                android:background="@color/blue">
            </Button>

            <Button
                android:id="@+id/btn3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:text="3"
                android:textSize="18sp"
                android:background="@color/blue"
                android:layout_marginEnd="2pt">
            </Button>

            <Button
                android:id="@+id/btn_minus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:onClick="operatorEvent"
                android:text="-"
                android:textSize="18sp"
                android:background="@color/colorAccent">
            </Button>

        </TableRow>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn0"
                android:layout_width="48dp"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="2"
                android:background="@color/blue"
                android:onClick="numberEvent"
                android:text="0"
                android:textSize="18sp">

            </Button>

            <Button
                android:id="@+id/btn_dot"
                android:layout_weight="1"
                android:layout_width="45dp"
                android:layout_height="30pt"
                android:onClick="numberEvent"
                android:text="."
                android:layout_marginRight="2pt"
                android:textSize="18sp"
                android:background="@color/blue">
            </Button>

            <Button
                android:id="@+id/btn_equles"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:onClick="equlesEvent"
                android:text="="
                android:textSize="18sp"
                android:background="@color/colorAccent"
                android:layout_marginEnd="2pt">
            </Button>



        </LinearLayout>



    </TableLayout>


</LinearLayout>